@model List<About>

@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-body">
						<div class="card-sub">
							Hakkımda ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz:
						</div>
						<table class="table table-bordered mt-3">
							<thead>
								<tr>
									<th scope="col" style="display:none;">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Alt Açıklama</th>
									<th scope="col">Detaylar</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td style="display:none;">@item.AboutId</td>
										<td>@item.Title</td>
										<td>@item.SubDescription</td>
										<td>@item.Details</td>
									</tr>
								}
							</tbody>
						</table>
						<!-- Güncelle butonu tablo dışında ve en altta -->
						@* Varsayılan olarak ilk AboutId'yi kullanarak güncelleme sayfasına giden örnek *@
						@if (Model.Any())
						{
							<a href="/About/UpdateAbout/@Model.First().AboutId" class="btn btn-success mt-3">Güncelle</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>