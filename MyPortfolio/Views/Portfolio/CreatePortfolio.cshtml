@model Portfolio

@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Başlık</label>
							<!-- asp-for : .net core da kullanılan tag helper dır. Yukarıdaki modele bağlı olarak o modelin içindeki propertylere erişim sağlamama olanak sağlar -->
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Alt Başlık</label>
							<input type="text" asp-for="SubTitle" class="form-control" />
							<br />
							<label>Görsel Yolu</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<label>Link</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />
							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-primary">Proje Ekle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

