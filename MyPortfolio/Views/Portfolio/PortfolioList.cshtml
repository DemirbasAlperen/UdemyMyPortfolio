@model List<Portfolio>
@{
	ViewData["Title"] = "PortfolioList";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Projeler Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Projeler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz:
						</div>
						<table class="table mt-3 table-bordered">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Alt Başlık</th>
									<th scope="col">Görsel Yolu</th>
									<th scope="col">Url</th>
									<th scope="col">Açıklama</th>
									<th scope="col" style="display: none;">Sil</th>
									<th scope="col" style="display: none;">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>@item.ImageUrl</td>
										<td>@item.Url</td>
										<td style="max-width: 260px; overflow-y: auto; white-space: normal;">@item.Description</td>
										<!-- aşağıdaki a(sil butonu) nın açıklaması: ExperinceController da yer alan DeleteExperience ye git buraya giderken de Id götür çünkü id ye göre silme işlemi yapılacak -->
										<td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Proje Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

