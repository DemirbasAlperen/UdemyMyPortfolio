@model List<Contact>

@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgileri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-body">
						<div class="card-sub">
							İletişim Bilgileri ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz:
						</div>
						<table class="table table-bordered mt-3">
							<thead>
								<tr>
									<th scope="col" style="display:none;">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Email</th>
									<th scope="col">Telefon</th>
									<th scope="col">Adres</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td style="display:none;">@item.ContactId</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Email1<br /><br />@item.Email2</td>
										<td>@item.Phone1<br /><br />@item.Phone2</td>
										<td>@item.Address</td>
									</tr>
								}
							</tbody>
						</table>
						<!-- Güncelle butonu tablo dışında ve en altta -->
						@* Varsayılan olarak ilk AboutId'yi kullanarak güncelleme sayfasına giden örnek *@
						@if (Model.Any())
						{
							<a href="/Contact/UpdateContact/@Model.First().ContactId" class="btn btn-success mt-3">Güncelle</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

