@model List<ToDoList>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;  // id artışı düzensiz olduğu için sayac kullanarak sorunu çözdük
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacaklar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yapılacaklar ile ilgili işlemleri aşağıdaki panelden gerçekleştirebilirsiniz:
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İçerik</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col" style="display: none;">Sil</th>
									<th scope="col" style="display: none;">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Date</td>
										<!-- aşağıdaki if bloğu nu Durum değişimi için ekledik. Tıpkı mesajlardaki gibi -->
										@if (item.Status == true)
										{
											<td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListId" class="btn btn-success">Yapılmadı Olarak İşaretle</a></td>
										}
										else
										{
											<td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListId" class="btn btn-info">Yapıldı Olarak İşaretle</a></td>
										}
										<td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
										<td><a href="/ToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-warning">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/ToDoList/CreateToDoList/" class="btn btn-primary">Yeni Yapılacak İşlem Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



