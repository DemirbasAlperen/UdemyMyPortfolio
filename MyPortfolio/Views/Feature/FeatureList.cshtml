@model List<Feature>

@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-body">
						<div class="card-sub">
							Öne Çıkan Alan ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz:
						</div>
						<table class="table table-bordered mt-3">
							<thead>
								<tr>
									<th scope="col" style="display:none;">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td style="display:none;">@item.FeatureId</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
									</tr>
								}
							</tbody>
						</table>
						<!-- Güncelle butonu tablo dışında ve en altta -->
						@if (Model.Any())
						{
							<a href="/Feature/UpdateFeature/@Model.First().FeatureId" class="btn btn-success mt-3">Güncelle</a>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

