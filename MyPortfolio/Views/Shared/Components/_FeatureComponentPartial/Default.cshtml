@model List<MyPortfolio.DAL.Entities.Feature>   // Entity lerde Feature a eriştik

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="@Url.Content("~/hola-master/images/hero-bg-v1.jpg")" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @* Sayfanın ilk açılış metinlerini dinamik olarak getirmek için foreach döngüsü kullandık. Sql de verileri tanımlayıp burada sayfamıza çektik.*@
    @foreach(var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.Title</h3> <br/><br/>

                <h1>
                    @item.Description
                    @* I am Jonathan Doe. <br>
                    I am a graphic & UI/UX <br>
                    designer based in Somewhere. *@
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projelerim
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı İn</span>
                    </a>
                </div>

            </div>

        </div>
    }

    <ul class="home-social">

        <!-- Social media -->
        @await Component.InvokeAsync("_SocialMediaComponentPartial")

    </ul>

</section>
